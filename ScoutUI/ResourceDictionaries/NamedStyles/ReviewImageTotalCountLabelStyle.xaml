<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="ReviewImageTotalCountLabelStyle" TargetType="Label">
        <Setter Property="Margin" Value="5,0,0,0" />
        <Setter Property="Padding" Value="3" ></Setter>
        <Setter Property="Foreground" Value="{DynamicResource GenericVeryLight}" />
        <Setter Property="FontFamily" Value="segoe ui" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="Width" Value="40"></Setter>
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Label">
                    <Border Name="border" BorderThickness="1" CornerRadius="8" BorderBrush="Transparent" Background="{TemplateBinding Background}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>