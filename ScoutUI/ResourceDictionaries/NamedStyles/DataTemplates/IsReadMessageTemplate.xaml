<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/ResourceDictionaries/Brushes/SolidColorBrushes.xaml" />
        <ResourceDictionary Source="/ResourceDictionaries/ConverterResources.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <DataTemplate x:Key="IsReadMessageTemplate">
        <Expander Header="{Binding DisplayTime}" 
                  HorizontalAlignment="Stretch" 
                  HorizontalContentAlignment="Stretch" 
                  FontSize="16" FontWeight="Bold"
                  Background="{Binding Type, Converter={StaticResource MessageTypeToBackgroundColor}}"
                  IsExpanded="{Binding IsRead, Converter={StaticResource InverseBooleanConverter}}">
            <TextBlock Text="{Binding Content}" FontSize="16" FontWeight="Bold" TextWrapping="Wrap"></TextBlock>
        </Expander>
    </DataTemplate>

</ResourceDictionary>