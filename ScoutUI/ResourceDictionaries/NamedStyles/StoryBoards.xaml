<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Storyboard x:Key="SlideAndFadeIn">
        <ThicknessAnimation Duration="0:0:1" Storyboard.TargetProperty="Margin" From="50,0,-500,0" To="0" DecelerationRatio=".9" />
        <DoubleAnimation Duration="0:0:1" Storyboard.TargetProperty="Opacity" From="0" To="1" />
    </Storyboard>

    <Storyboard x:Key="OpacityFadeIn">
        <DoubleAnimation Duration="0:0:3" Storyboard.TargetProperty="Opacity" From="0" To="1" />
    </Storyboard>

    <Storyboard x:Key="FirstStoryKey">
        <DoubleAnimation Storyboard.TargetProperty="Height" To="60" Duration="0:0:0.5" Storyboard.TargetName="ControlsGrid" />
    </Storyboard>

    <Storyboard x:Key="CloseFirstStoryKey">
        <DoubleAnimation Storyboard.TargetProperty="Height" To="12" Duration="0:0:0.5" Storyboard.TargetName="ControlsGrid" />
    </Storyboard>

</ResourceDictionary>