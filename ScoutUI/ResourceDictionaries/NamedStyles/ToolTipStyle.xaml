<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="ToolTipStyle" TargetType="ToolTip" BasedOn="{StaticResource {x:Type ToolTip}}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ToolTip}">
                    <Grid>
                        <Border Background="#A8054174" Margin="3" BorderThickness="0.6" BorderBrush="{DynamicResource GenericVeryLight}" CornerRadius="5">
                            <Label Content="{TemplateBinding Content}" MinHeight="30" Foreground="{DynamicResource GenericVeryLight}" VerticalAlignment="Center" VerticalContentAlignment="Center"
                                   HorizontalContentAlignment="Center" HorizontalAlignment="Center" FontSize="18"/>
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>