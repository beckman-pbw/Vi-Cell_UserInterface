                        <Grid FlowDirection="LeftToRight" HorizontalAlignment="Center" Height="18"
                              Margin="0" VerticalAlignment="Center" Width="19" Background="{DynamicResource Border_Dark}"
                              Focusable="False" KeyboardNavigation.IsTabStop="False">
