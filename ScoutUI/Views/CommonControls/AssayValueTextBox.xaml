<UserControl x:Class="ScoutUI.Views.ucCommon.AssayValueTextBox" Name="AssayTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ScoutUI.Views.ucCommon"
             mc:Ignorable="d"
             d:DesignHeight="40" d:DesignWidth="130">

    <Grid TouchDown="GridTouch_down" MouseLeftButtonDown="GridTouch_down" MouseRightButtonDown="GridTouch_down">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60*" />
            <ColumnDefinition Width="0" />
        </Grid.ColumnDefinitions>
        <TextBox Grid.Column="0" Text="{Binding ElementName=AssayTextBox,Path=AssayValue}"
                 Style="{StaticResource TextBoxAssayValueStyle}" MaxLength="5" TextChanged="AssayValueTextChange" LostFocus="OnAssayValueLostFocus" />
    </Grid>
</UserControl>