<UserControl x:Class="ScoutUI.Views.Service.ConcentrationSlope.AcupConcentrationSlope"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ScoutUI.Views.Service.ConcentrationSlope"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" MinWidth="300"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <local:AcupSamplesPanel Grid.Column="0" DataContext="{Binding SamplesPanelViewModel}"/>
        <local:AcupDataPanel Grid.Column="2" DataContext="{Binding DataPanelViewModel}"/>
    </Grid>
</UserControl>
