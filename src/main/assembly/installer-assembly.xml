<assembly>
  <!-- 
    assembly descriptor to create a zip package containing the scripts laid
    out as in the src/main/scripts directory.
  -->
  <id>installer</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <files>
    <!-- include the build.properties file, filled in with current properties -->
    <file>
      <source>src/main/assembly/UserInterface.manifest.txt</source>
      <outputDirectory>ScoutUI</outputDirectory>
      <filtered>true</filtered>
    </file>
    <file>
      <source>ScoutUI/appsettings.json</source>
      <outputDirectory>ScoutUI</outputDirectory>
      <filtered>true</filtered>
    </file>
    <file>
      <source>ScoutUI/app.config</source>
      <outputDirectory>ScoutUI</outputDirectory>
      <filtered>true</filtered>
    </file>
  </files>
  <fileSets>
    <fileSet>
      <directory>target/Release/en-US</directory>
      <lineEnding>keep</lineEnding>
      <outputDirectory>ScoutUI/en-US</outputDirectory>
      <fileMode>0755</fileMode>
    </fileSet>
    <fileSet>
      <directory>target/Release/fr-FR</directory>
      <lineEnding>keep</lineEnding>
      <outputDirectory>ScoutUI/fr-FR</outputDirectory>
      <fileMode>0755</fileMode>
    </fileSet>
    <fileSet>
      <directory>target/Release</directory>
      <lineEnding>keep</lineEnding>
      <outputDirectory>ScoutUI</outputDirectory>
      <fileMode>0755</fileMode>
    </fileSet>
    <fileSet>
      <directory>ScoutUI/Views/Reports</directory>
      <lineEnding>keep</lineEnding>
      <outputDirectory>ScoutUI/Reports</outputDirectory>
      <fileMode>0755</fileMode>
    </fileSet>
    <fileSet>
      <directory>target/properties/ScoutUtilities/LanguageResources</directory>
      <lineEnding>keep</lineEnding>
      <outputDirectory>ScoutUI/LanguageResources</outputDirectory>
      <fileMode>0755</fileMode>
    </fileSet>
    <fileSet>
      <directory>target/Release/UIConfiguration</directory>
      <lineEnding>keep</lineEnding>
      <outputDirectory>ScoutUI/UIConfiguration</outputDirectory>
      <fileMode>0755</fileMode>
    </fileSet>
    <fileSet>
      <directory>ScoutUtilities/LanguageResources</directory>
      <lineEnding>keep</lineEnding>
      <outputDirectory>ScoutUI/LanguageResources</outputDirectory>
	  <excludes>
        <exclude>Properties/**</exclude>
		<exclude>*.cs</exclude>
      </excludes>
      <fileMode>0755</fileMode>
    </fileSet>
    <fileSet>
      <directory>ScoutUI/HelpDocuments</directory>
      <lineEnding>keep</lineEnding>
      <outputDirectory>ScoutUI/HelpDocuments</outputDirectory>
      <fileMode>0755</fileMode>
    </fileSet>
    <fileSet>
      <directory>ScoutDataAccessLayer/XMLDB</directory>
      <lineEnding>keep</lineEnding>
      <outputDirectory>ScoutUI/XMLDB</outputDirectory>
      <fileMode>0755</fileMode>
    </fileSet>
    <fileSet>
      <directory>RunResult</directory>
      <lineEnding>keep</lineEnding>
      <outputDirectory>ScoutUI/RunResult</outputDirectory>
      <fileMode>0755</fileMode>
    </fileSet>
  </fileSets>
</assembly>
